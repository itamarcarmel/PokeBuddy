# Environment Configuration
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=3001

# LLM Provider Selection
LLM_PROVIDER=groq  # Options: "groq" | "openrouter"

# Groq Configuration (FREE - Get your key at https://console.groq.com/)
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_API_URL=https://api.groq.com/openai/v1
GROQ_MODEL=llama-3.1-8b-instant

# OpenRouter Configuration (100+ models - Requires credits)
OPENROUTER_API_KEY=sk_your_openrouter_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free
OPENROUTER_APP_NAME=PokeBuddy

# Database
DATABASE_PATH=data/pokebuddy.sqlite
